{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jquery": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "game": false,
    "p2": false,
    "dest": true
  },
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "quotes": ["error","single"],
    "semi": ["error","never"],
    "no-console": ["warn", { "allow": ["info", "error"] }]
  }
}
